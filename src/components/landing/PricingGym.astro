---
import Check from "../svg/Check.astro";
import RowRight from "../svg/RowRight.astro";
import Map from "../svg/Map.astro";

const precioMensualBeneficiosGym = [
  "Acceso ilimitado al gimnasio.",
  "Clases oficiales ANIMUS SYSTEM incluidas.",
  "Acceso total a the Animus App.",
  "Evaluación corporal InBody trimestral.",
  "Gana Puntos por entrenar y cambiar tu cuerpo.",
  "Libertad de pago mes a mes.",
];

const preciosAnualBeneficiosGym = [
  "Acceso ilimitado con estatus prioritario.",
  "Clases ANIMUS SYSTEM con cupo asegurado.",
  "Acceso total a the Animus App.",
  "Evaluación inbody mensual.",
  "Gana Puntos por entrenar y cambiar tu cuerpo sin perderlos nunca",
  "Un solo pago con un gran ahorro.",
  "Puedes congelar un mes entero si no puedes venir.",
];
---

<section class="relative isolate bg-gray-900 px-6 py-6 lg:px-8">
  <!-- Pricing Cards -->
  <div
    class="mx-auto grid max-w-lg grid-cols-1 gap-8 lg:max-w-5xl lg:grid-cols-2"
  >
    <div class="flex flex-row items-center gap-2 lg:hidden">
      <Map />
      <span class="text-xs text-gray-200">
        <span class="text-rose-500">Sede Fisica:</span>
        <a
          href="https://maps.app.goo.gl/iYD6WAuHZsneLVzy5"
          target="_blank"
          class="underline text-gray-300"
        >
          Irlanda y República del Salvador Edificio Siglo XXI , piso 1
        </a>
      </span>
    </div>
    <!-- Plan mensual -->
    <div
      class="rounded-2xl bg-gray-800/70 backdrop-blur p-8 ring-1 ring-white/10 hover:ring-primary-400/50 transition-all duration-300"
    >
      <p class="flex items-baseline gap-x-2">
        <span class="text-5xl font-bold tracking-tight text-white relative">
          $77
          <!-- <span
            class="text-2xl font-semibold text-white absolute top-0 -right-9"
            >99</span
          > -->
        </span>
        <span class="text-base text-white">/mes Inc. IVA</span>
      </p>
      <p class="mt-5 text-base text-gray-200 font-medium">
        Animus Flow, Plan Recurrente
      </p>
      <ul class="mt-6 space-y-3 text-sm text-gray-300">
        {
          precioMensualBeneficiosGym.map((beneficio) => (
            <li class="flex gap-x-2 items-start">
              <Check class="w-4 h-4 text-primary-400 mt-1" />
              <span>{beneficio}</span>
            </li>
          ))
        }
      </ul>
      <a
        href="/pay"
        class="mt-4 w-full inline-flex items-center justify-center px-4 lg:px-5 py-2.5 lg:py-3 text-sm lg:text-base font-medium text-center text-white rounded-lg bg-rose-600 hover:bg-rose-700 focus:ring-4 focus:ring-rose-900 transition-colors cursor-pointer"
      >
        <span class="whitespace-nowrap"> Contratar Animus Flow </span>
        <RowRight />
      </a>
    </div>

    <!-- Plan anual destacado -->
    <div
      class="relative rounded-2xl bg-gray-800/70 backdrop-blur p-8 shadow-lg ring-2 ring-white/10"
    >
      <span
        class="absolute -top-3 right-6 inline-flex items-center rounded-full bg-yellow-500 px-3 py-1 text-xs font-bold text-gray-900 shadow-md"
      >
        Más popular
      </span>
      <p class="flex items-baseline gap-x-2">
        <span class="text-5xl font-bold tracking-tight text-white">$799</span>
        <span class="text-base text-white/90">/año Inc. IVA</span>
      </p>
      <p class="mt-5 text-base text-gray-200 font-medium">
        Animus Legacy, entrena todo el año
      </p>
      <ul class="mt-6 space-y-3 text-sm text-white/90">
        {
          preciosAnualBeneficiosGym.map((beneficio) => (
            <li class="flex gap-x-2 items-start">
              <Check class="w-4 h-4 text-white mt-1" />
              <span>{beneficio}</span>
            </li>
          ))
        }
      </ul>
      <a
        href="/pay"
        class="mt-4 w-full inline-flex items-center justify-center px-4 lg:px-5 py-2.5 lg:py-3 text-sm lg:text-base font-medium text-center text-white rounded-lg bg-rose-600 hover:bg-rose-700 focus:ring-4 focus:ring-rose-900 transition-colors cursor-pointer"
      >
        <span class="whitespace-nowrap"> Contratar Animus Legacy </span>
        <RowRight />
      </a>
    </div>

    <div class="hidden flex-row items-center gap-2 lg:flex">
      <Map />
      <span class="text-xs text-gray-200">
        <span class="text-rose-500">Sede Fisica:</span>
        <a
          href="https://maps.app.goo.gl/iYD6WAuHZsneLVzy5"
          target="_blank"
          class="underline text-gray-300"
        >
          Irlanda y República del Salvador Edificio Siglo XXI , piso 1
        </a>
      </span>
    </div>
  </div>
</section>
