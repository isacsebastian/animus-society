---
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Admin Login | Animus Society"
  description="Panel de administración para gestionar pagos y códigos de descuento"
>
  <main
    class="bg-gray-50 min-h-screen flex items-center justify-center py-12 px-4"
  >
    <div class="flex flex-col items-center gap-4">
      <div
        class="w-full max-w-sm bg-white rounded-xl shadow-lg border border-gray-200 p-8"
      >
        <a href="/" class="flex justify-center mb-6 hover:opacity-80 transition-opacity" title="Ir al inicio">
          <img src="/icon.png" alt="Animus Society" class="w-16 h-16" />
        </a>

      <div class="text-center mb-8">
        <h1 class="text-2xl font-bold text-black mb-1">Administrador</h1>
        <p class="text-gray-600 text-sm">Animus Society</p>
      </div>

      <form id="loginForm" class="flex flex-col gap-4">
        <input
          id="username"
          class="border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#6D4AEB] focus:border-transparent text-black placeholder-gray-500"
          type="text"
          placeholder="Usuario"
          required
          autocomplete="username"
        />
        <input
          id="password"
          class="border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#6D4AEB] focus:border-transparent text-black placeholder-gray-500"
          type="password"
          placeholder="Clave"
          required
          autocomplete="current-password"
        />
        <div
          id="errorMessage"
          class="text-red-600 text-sm text-center bg-red-50 p-3 rounded-lg border border-red-200 hidden"
        >
        </div>
        <button
          type="submit"
          class="bg-[#6D4AEB] text-white font-semibold rounded-lg py-3 px-4 hover:bg-[#5A3CC7] transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-[#6D4AEB]"
        >
          Ingresar
        </button>
      </form>
    </div>

    <!-- Botón de Ir al Inicio -->
    <a
      href="/"
      class="flex items-center gap-2 text-gray-600 hover:text-black px-4 py-2 rounded-lg hover:bg-white/50 transition-all duration-200 group"
      title="Volver al inicio"
    >
      <svg
        class="w-5 h-5 group-hover:scale-110 transition-transform"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
        ></path>
      </svg>
      <span class="text-sm font-medium">Volver al inicio</span>
    </a>
  </div>
  </main>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const adminToken = localStorage.getItem("animus-admin-token");
      if (adminToken === "admin_authenticated") {
        window.location.href = "/admin/dashboard";
      }
    });

    const loginForm = document.getElementById("loginForm");
    if (loginForm) {
      loginForm.addEventListener("submit", function (e) {
        e.preventDefault();

        const usernameEl = document.getElementById(
          "username"
        ) as HTMLInputElement;
        const passwordEl = document.getElementById(
          "password"
        ) as HTMLInputElement;
        const errorDiv = document.getElementById("errorMessage");

        if (!usernameEl || !passwordEl || !errorDiv) return;

        const username = usernameEl.value;
        const password = passwordEl.value;

        errorDiv.classList.add("hidden");

        if (username === "admin" && password === "passanimus2025@") {
          localStorage.setItem("animus-admin-token", "admin_authenticated");
          localStorage.setItem("animus-admin-user", "admin");
          localStorage.setItem(
            "animus-admin-login-time",
            new Date().getTime().toString()
          );

          window.location.href = "/admin/dashboard";
        } else {
          errorDiv.textContent = "Usuario o clave incorrectos";
          errorDiv.classList.remove("hidden");
        }
      });
    }
  </script>
</Layout>
